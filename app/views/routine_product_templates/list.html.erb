<h1>
  Routine product list
</h1>

<a href="/new_routine_product_form">
  Add a new routine product
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Routine
    </th>

    <th>
      Product
    </th>

    <th>
      Use frequency
    </th>

    <th>
      Note
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @routine_products.each do |routine_product| %>
  <tr>
    <td>
      <%= routine_product.id %>
    </td>

    <td>
      <%= routine_product.routine_id %>
    </td>

    <td>
      <%= routine_product.product_id %>
    </td>

    <td>
      <%= routine_product.use_frequency_id %>
    </td>

    <td>
      <%= routine_product.note %>
    </td>

    <td>
      <%= time_ago_in_words(routine_product.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(routine_product.updated_at) %> ago
    </td>

    <td>
      <a href="/routine_products/<%= routine_product.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
