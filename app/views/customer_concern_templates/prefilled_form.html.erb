<h1>
  Edit customer concern #<%= @customer_concern.id %>
</h1>

<hr>

<%= render("customer_concern_templates/validation_failures.html.erb") %>

<form action="/update_customer_concern_record/<%= @customer_concern.id %>" method="post">
  <div>
    <label for="concern_id">
      Concern
    </label>

    <input type="text" id="concern_id" name="concern_id" value="<%= @customer_concern.concern_id %>">
  </div>

  <div>
    <label for="customer_id">
      Customer
    </label>

    <input type="text" id="customer_id" name="customer_id" value="<%= @customer_concern.customer_id %>">
  </div>

  <button>
    Update customer concern
  </button>
</form>

<hr>

<a href="/customer_concerns">
  Go back
</a>
